model Cart {
  id        Int      @id @default(autoincrement())
  user      User?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  archive   Boolean  @default(false)
}

model WishList {
  id        Int      @id @default(autoincrement())
  user      User?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  archive   Boolean  @default(false)
}

model User {
  id                Int              @id @default(autoincrement())
  name              String
  email             String
  password          String?
  UserRoles         UserRole[]
  address           String?
  phoneNo           String?
  cart              Cart             @relation(fields: [cartId], references: [id])
  cartId            Int              @unique
  wishList          WishList         @relation(fields: [wishListId], references: [id])
  wishListId        Int              @unique
  merchant          MerchantDetails? @relation(fields: [merchantDetailsId], references: [id])
  merchantDetailsId Int?             @unique
  category          Category[]
  subCategory       SubCategory[]
  item              Item[]
  feature           Feature[]
  product           Product[]
  orderMerchant     Order[]          @relation("OrderMerchant")
  orderCustomer     Order[]          @relation("OrderCustomer")
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  archive           Boolean          @default(false)
}
